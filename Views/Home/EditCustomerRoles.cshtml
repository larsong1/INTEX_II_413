@using INTEX_II_413.Models.ViewModels;
@model EditCustomerRolesViewModel

<h2>Edit Roles for @Model.Email</h2>

<form asp-action="EditCustomerRoles" method="post">
    <input type="hidden" asp-for="UserId" />
    <div class="form-group">
        @foreach (var role in Model.AvailableRoles)
        {
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="selectedRoles" value="@role"
                       id="role_@role" @(Model.Roles.Contains(role) ? "checked" : "") />
                <label class="form-check-label" for="role_@role">@role</label>
            </div>
        }
    </div>
    <button type="submit" class="btn btn-primary">Update Roles</button>
</form>
