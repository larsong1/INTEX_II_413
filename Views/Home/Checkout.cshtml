@model INTEX_II_413.Models.ViewModels.OrderSubmissionViewModel

@{
    ViewData["Title"] = "Checkout";
}

<h1 style="margin-bottom: 16px;">Enter Payment Information</h1>
<form asp-controller="Home" asp-action="PlaceOrder" method="post" style="width: 100%;">

    <!-- Hidden field for CustomerId -->
    <input type="hidden" asp-for="CustomerId" />

    <!-- Select for Bank -->
    <label for="bank" style="margin-bottom: 16px; display: block;">Bank:</label>
    <select asp-for="Order.Bank" id="bank" required style="width: calc(100% - 16px); padding: 8px; margin-bottom: 16px; box-sizing: border-box;">
        <option value="RBS">RBS</option>
        <option value="Lloyds">Lloyds</option>
        <option value="Barclays">Barclays</option>
        <option value="Halifax">Halifax</option>
        <option value="Monzo">Monzo</option>
        <option value="HSBC">HSBC</option>
        <option value="Metro">Metro</option>
    </select>

    <!-- Select for Card Type -->
    <label for="cardType" style="margin-bottom: 16px; display: block;">Card Type:</label>
    <select asp-for="Order.CardType" id="cardType" required style="width: calc(100% - 16px); padding: 8px; margin-bottom: 16px; box-sizing: border-box;">
        <option value="Visa" selected>Visa</option>
        <option value="Mastercard">Mastercard</option>
    </select>

    <!-- Hidden fields for other Order properties -->
    <input asp-for="Order.EntryMode" type="hidden" value="CVC" required />
    <input asp-for="Order.Date" type="hidden" value="@DateTime.Now" required />
    <input asp-for="Order.DayOfWeek" type="hidden" value="@DateTime.Now.DayOfWeek.ToString()" required />
    <input asp-for="Order.Amount" type="hidden" value="@TempData["OrderAmount"]" />
    <input asp-for="Order.Type" type="hidden" value="Online" required />
    <input asp-for="Order.Fraud" type="hidden" value="False" required />

