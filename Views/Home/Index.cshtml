@model INTEX_II_413.Models.ViewModels.IndexViewModel

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Aurora Brickwell's Lego Store</title>
</head>

<body style="font-family: Arial, sans-serif; background-color: #f8f8f8; color: #333; margin: 0; padding: 0;">

    <header style="color: black; padding: 20px; text-align: center; font-size: 36px; font-family: 'Arial Black', sans-serif;">
        <h1>Welcome to Aurora Brickwell's Lego Store</h1>
    </header>



    <div style="text-align: center;">
        <img style="width: 1200px; height: 600px; border-radius: 10px" src="~/img/legocity.jpg" />
    </div>
    <br />

    <section id="recommendations" style="padding: 50px 0;">
        <div class="container" style="width: 80%; margin: 0 auto; text-align: center;">
            <h2 style="color: black;">Recommended for You</h2>
            @if (Model.RecommendedProducts.Any())
            {
                <div class="row">
                    @foreach (var product in Model.RecommendedProducts)
                    {
                        <div class="col-md-4">
                            <div class="card h-100">
                                <div class="card-header text-center">
                                    <h5>@product.Name</h5>
                                </div>
                                <a asp-action="SingleProduct" asp-route-id="@product.ProductId" class="stretched-link">
                                    <div class="card-body d-flex justify-content-center align-items-center" style="height: 300px; background-image: url('@product.ImgLink'); background-size: contain; background-position: center; background-repeat: no-repeat;">
                                    </div>
                                </a>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <p>No recommendations available at the moment.</p>
            }
        </div>
    </section>

    <div class="row justify-content-center">
        <div class="col-6 text-center">
            <a class="btn btn-outline-danger" asp-controller="Home" asp-action="Products">See More Legos</a>
        </div>
    </div>
    <br />
    <hr />
    <div class="row">
        <div class="col-lg-4">
            <h2 class="fw-normal text-center">Experience</h2>
            <p>As a renowned collector and master builder, Aurora Brickwell invites you to embark on a journey into the enchanting world of Lego. With a passion for creativity and innovation, Aurora has curated a stunning selection of Lego sets and exclusive designs, ready to spark your imagination.</p>
        </div><!-- /.col-lg-4 -->
        <div class="col-lg-4">
            <h2 class="fw-normal text-center">Technology</h2>
            <p>Experience the thrill of exploring Aurora's Bricks online storefront, where personalized product recommendations powered by machine learning await. Dive into a world where every brick tells a story and every creation is a masterpiece.</p>
        </div><!-- /.col-lg-4 -->
        <div class="col-lg-4">
            <h2 class="fw-normal text-center">Security</h2>
            <p>Rest assured, your security is our top priority. With robust measures in place to combat online fraud and uphold privacy laws, you can shop with confidence at Aurora's Bricks.</p>
        </div><!-- /.col-lg-4 -->
    </div>


</body>