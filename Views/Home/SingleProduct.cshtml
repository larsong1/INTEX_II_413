@model INTEX_II_413.Models.ViewModels.SimilarProductViewModel

<div class="col-md-12">
    <div class="card m-1 p-1">
        <h4 class="text-center">
            @Model.Product.Name
            <span class="badge rounded-pill text-white float-end" style="background-color: #e8040c;border-color:black;"><small>$@Model.Product.Price</small></span>
        </h4>
        <a class="text-center" href="@Model.Product.ImgLink">
            <img src="@Model.Product.ImgLink" style="max-width: 400px; height: auto;">
        </a>
        <ul>
            <li>Number of Parts: @Model.Product.NumParts</li>
            <li>Made in @Model.Product.Year</li>
            <li>@Model.Product.Category</li>
            <li>@Model.Product.Description</li>
        </ul>
        <div style="display: flex; justify-content: center;">
            <div style="margin-right: 10px;">
                <a class="btn btn-primary"asp-controller="Home"asp-action="Products"
                   style="display: inline-flex; justify-content: center; align-items: center; outline: 0; cursor: pointer; height: 34px; padding: 0 13px;
                      color: white; border-radius: 3px; border: 1px solid transparent; transition: all .3s ease; background: #e8040c; border-color: black;
                      font-weight: 600; text-transform: uppercase; line-height: 16px; font-size: 14px;">
                      <b>Continue Shopping</b>
                </a>
            </div>


            <div style="margin-left: 10px;">
                <form id="@Model.Product.ProductId" method="post" asp-page="/Cart">
                    <input type="hidden" asp-for="ProductId" value="@Model.Product.ProductId" />
                    <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
                    <button type="submit" class="btn-outline-success btn-sm float-end"
                            style="display: inline-flex; justify-content: center; align-items: center; outline: 0; cursor: pointer; height: 34px;
                            padding: 0 13px; color: white; border-radius: 3px; border: 1px solid transparent; transition: all .3s ease; background: #e8040c;
                            border-color: black; font-weight: 600; text-transform: uppercase; line-height: 16px; font-size: 14px; margin-right: 10px;">
                        <b>Add to Cart</b>
                    </button>
                </form>
            </div>
        </div>
        <br><br>
        <div>
            <h4 class="text-center">If you are interested in this product, here's a couple more you might be interested in!</h4>
            <input type="hidden" asp-for="Product.ProductId" value="@Model.Item_Based_Recs.ProductId" />
            <div class="row">
                <div class="col-md-4">
                    <div class="card h-100">
                        <div class="card-header text-center">
                            <h5>@Model.Recommendation1Product.Name</h5>
                        </div>
                        <a asp-action="SingleProduct" asp-route-id="@Model.Recommendation1Product.ProductId" class="stretched-link">
                            <div class="card-body d-flex justify-content-center align-items-center" style="height: 300px; background-image: url('@Model.Recommendation1Product.ImgLink'); background-size: contain; background-position: center; background-repeat: no-repeat;">
                            </div>
                        </a>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100">
                        <div class="card-header text-center">
                            <h5>@Model.Recommendation2Product.Name</h5>
                        </div>
                        <a asp-action="SingleProduct" asp-route-id="@Model.Recommendation2Product.ProductId" class="stretched-link">
                            <div class="card-body d-flex justify-content-center align-items-center" style="height: 300px; background-image: url('@Model.Recommendation2Product.ImgLink'); background-size: contain; background-position: center; background-repeat: no-repeat;">
                            </div>
                        </a>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100">
                        <div class="card-header text-center">
                            <h5>@Model.Recommendation3Product.Name</h5>
                        </div>
                        <a asp-action="SingleProduct" asp-route-id="@Model.Recommendation3Product.ProductId" class="stretched-link">
                            <div class="card-body d-flex justify-content-center align-items-center" style="height: 300px; background-image: url('@Model.Recommendation3Product.ImgLink'); background-size: contain; background-position: center; background-repeat: no-repeat;">
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
