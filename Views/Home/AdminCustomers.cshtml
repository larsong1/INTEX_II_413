@using INTEX_II_413.Models.ViewModels

@model CustomerListViewModel

﻿<br />
<div style="display: flex; align-items: center;">
    <div style="flex-grow: 1; text-align: center;">
        <h1 style="color: black; padding: 20px; text-align: center; font-size: 48px; font-family: 'Arial Black' , sans-serif;" class="text-center">Customers</h1>
        <form asp-controller="Home" asp-action="AdminHomepage" method="get">
            <button type="submit" class="btn" style="outline: 0; cursor: pointer; height: 34px; padding: 0 13px;
                   color: white; border-radius: 3px; border: 1px solid transparent; transition: all .3s ease; background: #e8040c; border-color: black;
                   font-weight: 600; text-transform: uppercase; line-height: 16px; font-size: 14px;">
                <b>Return to Admin Portal</b>
            </button>
        </form>
    </div>
</div>
<br/>


<table class="table table-bordered table-striped">

    <thead class="thead-dark">
        <tr>
            <th style="text-align:center; background-color: #e8040c; font-weight: bold; color: white;">Customer ID</th>
            <th style="text-align:center; background-color: #e8040c; font-weight: bold; color: white;">First Name</th>
            <th style="text-align:center; background-color: #e8040c; font-weight: bold; color: white;">Last Name</th>
            <th style="text-align:center; background-color: #e8040c; font-weight: bold; color: white;">Birth Date</th>
            <th style="text-align:center; background-color: #e8040c; font-weight: bold; color: white;">Country</th>
            <th style="text-align:center; background-color: #e8040c; font-weight: bold; color: white;">Gender</th>
            <th style="text-align:center; background-color: #e8040c; font-weight: bold; color: white;">Age</th>

            <th style="text-align:center; background-color: #e8040c; font-weight: bold; color: white;">Edit</th>
            <th style="text-align:center; background-color: #e8040c; font-weight: bold; color: white;">Delete</th>
        </tr>
    </thead>


    <tbody>
        @foreach (var x in Model.Customers)
        {
            <tr>
                <td style="text-align:center">@x.CustomerId</td>
                <td style="text-align:center">@x.FirstName</td>
                <td style="text-align:center">@x.LastName</td>
                <td style="text-align:center">@x.BirthDate.Date.ToString("MM/dd/yyyy")</td>
                <td style="text-align:center">@x.Country</td>
                <td style="text-align:center">@x.Gender</td>
                <td style="text-align:center">@x.Age</td>

                <td style="text-align:center">
                    <a class="btn btn-info"
                       asp-controller="Home" asp-action="EditCustomer" asp-route-id="@x.CustomerId"
                       style="display: inline-flex; justify-content: center; align-items: center; outline: 0; cursor: pointer; height: 34px; padding: 0 13px;
                       color: white; border-radius: 3px; border: 1px solid transparent; transition: all .3s ease; background: #e8040c; border-color: black;
                       font-weight: 600; text-transform: uppercase; line-height: 16px; font-size: 14px;">
                        <b>Edit</b>
                    </a>
                </td>
                <td style="text-align:center">
                    <a class="btn btn-danger"
                       asp-controller="Home" asp-action="DeleteCustomer" asp-route-id="@x.CustomerId"
                       style="display: inline-flex; justify-content: center;align-items: center;outline: 0;cursor: pointer;height: 34px;padding: 0 13px;
                       color: white;border-radius: 3px;border: 1px solid transparent;transition: all .3s ease;background:	#e8040c;border-color:black;
                       font-weight: 600;text-transform: uppercase;line-height: 16px;font-size: 14px;">
                        <b>Delete</b>
                    </a>
                </td>

            </tr>
        }
    </tbody>

</table>

<div class="row justify-content-between" style="display: inline-block;">
    <!-- Pagination at the bottom of the products list -->
    <div class="col-auto" style="display: inline-block;">
        <nav aria-label="Page navigation">
            <ul class="pagination">
                @if (Model.PaginationInfo.TotalPages > 0)
                {
                    @if (Model.PaginationInfo.CurrentPage > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" href="@Url.Action("AdminCustomers", "Home", new { pageNum = 1 })">First</a>
                        </li>
                    }
                    @if (Model.PaginationInfo.CurrentPage > 5)
                    {
                        <li class="page-item disabled"><span class="page-link">...</span></li>
                    }
                    @for (int i = Math.Max(1, Model.PaginationInfo.CurrentPage - 2); i <= Math.Min(Model.PaginationInfo.TotalPages, Model.PaginationInfo.CurrentPage + 2); i++)
                    {
                        <li class="page-item @(i == Model.PaginationInfo.CurrentPage ? "active" : "")">
                            <a class="page-link" href="@Url.Action("AdminCustomers", "Home", new { pageNum = i })">@i</a>
                        </li>
                    }
                    @if (Model.PaginationInfo.CurrentPage < Model.PaginationInfo.TotalPages - 4)
                    {
                        <li class="page-item disabled"><span class="page-link">...</span></li>
                    }
                    @if (Model.PaginationInfo.CurrentPage < Model.PaginationInfo.TotalPages)
                    {
                        <li class="page-item">
                            <a class="page-link" href="@Url.Action("AdminCustomers", "Home", new { pageNum = Model.PaginationInfo.TotalPages })">Last</a>
                        </li>
                    }
                }
            </ul>
        </nav>
    </div>
</div>

